user_input = input("Choose F or C. :")

if user_input == "F":
    A = float(input("Give the tempature you want to convert to F. :"))
    F = A * 9/5 + 32
    print(f"{F}°")
    
elif user_input == "C":
    B = float(input("Give the tempature you want to convert to C. :"))
    C = (B - 32) * 5/9
    print(f"{C}°")
    
else:
    print("Invalid. Pleas choose F or C.")